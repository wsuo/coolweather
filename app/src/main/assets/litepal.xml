<!--litepal的配置文件-->
<litepal>

    <!--    将数据库指定为cool_weather-->
    <dbname value="cool_weather" />
    <!--    将版本号指定为1-->
    <version value="1" />
    <!--    将3个实体类添加到映射列表当中-->
    <list>
        <mapping class="com.coolweather.android.db.Province" />
        <mapping class="com.coolweather.android.db.City" />
        <mapping class="com.coolweather.android.db.County" />
    </list>

</litepal>
